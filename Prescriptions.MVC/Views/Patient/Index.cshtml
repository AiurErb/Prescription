@model List<Patient>

<h2>Patients</h2>

<div class="container">
    <div class="table">
        <div class="table-success">
            
            <div class="row">
                <div class="col-2">@Html.DisplayNameFor(model=>model.First().Name)</div>
                <div class="col-2">@Html.DisplayNameFor(model=>model.First().Birthday)</div>
                <div class="col-3">@Html.DisplayNameFor(model=>model.First().InsuranceNumber)</div>
            </div>
        </div>
        <div class="table-light">
                @foreach (Patient patient in Model)
                {
                    <div class="row">
                        <div class="col-2">@Html.DisplayFor(p=>patient.Name)</div>
                        <div class="col-2">@Html.DisplayFor(p=>patient.Birthday)</div>
                        <div class="col-3">@Html.DisplayFor(p=>patient.InsuranceNumber)</div>
                        <div class="col-2">
                            <a asp-action="Details" asp-route-id="@patient.Id">
                                <i class="fa-solid fa-info"></i>
                            </a>
                        </div>
                    </div>
                }
        </div>
        
    </div>
</div>